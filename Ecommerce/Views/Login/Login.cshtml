@model Ecommerce.Models.UserInformation

@{
    ViewBag.Title = "Login";
}


<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Log In</h1>
                    <br /><br /><br />
                    <br /><br />
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="~/images/chair-vmake.png" class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->
<!-- Start Contact Form -->
<div class="untree_co-section">
    <div class="container">
        <div class="block">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 pb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h2 class="text-center">Sign In Now</h2>
                            <br />
                            @using (Html.BeginForm())
                            {
                                if (ViewBag.loginError == true)
                                {
                                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                                        <div>
                                            Invalid Email or Password.
                                        </div>
                                    </div>
                                }
                                <div class="form-group">
                                    <label class="text-black" required>Email</label>
                                    @Html.TextBoxFor(model => model.email, new { @class = "form-control", type = "email", required = "required" })
                                </div>

                                <div class="form-group">
                                    <label class="text-black" required>Password</label>
                                    @Html.PasswordFor(model => model.password, new { @class = "form-control", required = "required" })
                                </div>

                                <div class="form-group text-right">
                                    @Html.ActionLink("Forgot Password?", "ForgotPassword", "Login", null, new { @class = "text-primary" })
                                </div>

                                <br />

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">
                                        Log In
                                    </button>
                                </div>

                                <br />

                                <div class="text-center">
                                    <span>Don't have an account?'</span> @Html.ActionLink("Sign up", "Register", "Login", null, new { @class = "text-primary" })
                                </div>
                            }
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0);
        }
</style>

