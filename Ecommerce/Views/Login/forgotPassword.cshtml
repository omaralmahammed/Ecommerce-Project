@model Ecommerce.Models.UserInformation

@{
    ViewBag.Title = "Forgot Password";
}

<!-- Start Contact Form -->
<div class="untree_co-section">
    <div class="container">
        <div class="block">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 pb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h2 class="text-center">Enter Your Email</h2>
                            <br />
                            @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post, new { @onsubmit = "return displayAlert();" }))
                            {
                                <br /> <br />

                                <div class="form-group">
                                    <label class="text-black" for="email">Email</label>
                                    @Html.TextBox("email", null, new { @class = "form-control", type = "email", required = "required" })
                                </div>
                                <span class="text-danger">@ViewBag.emailError</span>

                                <br />

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary">
                                        Submit
                                    </button>
                                </div>
                            }
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
</style>

@section Scripts {
    @* Ensure SweetAlert is included *@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script type="text/javascript">
        function displayAlert() {
            Swal.fire({
                title: "OTP was sent",
                text: "Check your Email!",
                showConfirmButton: false,
                timer: 2000,
            });

            // Allow the form to be submitted after the alert
            return true;
        }
    </script>
}
